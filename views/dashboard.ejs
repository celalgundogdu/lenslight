            </div>
            <!-- end customers  -->

            <!-- user gallery -->
            <% if (photos.length> 0) { %>
                <div class="gallery">
                    <div class="container_with">
                        <div class="row">
                            <div class="col-md-12">
                                <div class="titlepage text_align_center">
                                    <h2>My Photos</h2>
                                </div>
                            </div>
                        </div>
                        <div class="tz-gallery">
                            <div class="row">
                                <% for (photo of photos) { %>
                                    <div class="col-lg-4 col-md-6 ma_bottom30">
                                        <div class="lightbox">
                                            <img src="<%=photo.url %>" class="photo" alt="<%=photo.name %>">
                                            <div class="view_main">
                                                <div class="pose">
                                                    <a class="read_more" href="/photos/<%= photo._id %>">
                                                        <img src="/images/ga.png" alt="#" />
                                                    </a>
                                                    <h3 class="py-3">
                                                        <%= photo.name %>
                                                    </h3>
                                                    <p class="pt-3">
                                                        <% if(photo.description.length> 100) { %>
                                                            <%= photo.description.substring(0, 100) + '...' %>
                                                                <% } else { %>
                                                                    <%= photo.description %>
                                                                        <% } %>
                                                    </p>
                                                </div>
                                            </div>
                                        </div>
                                    </div>
                                    <% } %>
                            </div>
                        </div>
                    </div>
                </div>
                <% } %>

                    <!-- followers -->
                    <% if (user.followers.length> 0) { %>
                        <div class="team">
                            <div class="container_with">
                                <div class="row">
                                    <div class="col-md-12">
                                        <div class="titlepage text_align_center">
                                            <h2>Followers</h2>
                                        </div>
                                    </div>
                                    <div class="col-md-4">
                                        <div class="team_box text_align_center">
                                            <div class="team_img">
                                                <figure><img src="/images/team1.jpg" alt="#" /></figure>
                                            </div>
                                            <% for (follower of user.followers) { %>
                                                <div class="craig">
                                                    <h3>
                                                        <%= follower.username %>
                                                    </h3>
                                                    <ul class="social_icon ">
                                                        <li>
                                                            <a href="/users/<%= follower._id %>">
                                                                <i class="fa fa-external-link-square"
                                                                    aria-hidden="true"></i>
                                                            </a>
                                                        </li>
                                                        <!-- <li><a href="Javascript:void(0)"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                                 </li>
                                 <li><a href="Javascript:void(0)"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                                 </li> -->
                                                    </ul>
                                                </div>
                                                <% } %>
                                        </div>
                                    </div>

                                </div>
                            </div>
                        </div>
                        <% } %>
                            <!-- end follower -->

                            <!-- start followings -->
                            <% if (user.followings.length> 0) { %>
                                <div class="team">
                                    <div class="container_with">
                                        <div class="row">
                                            <div class="col-md-12">
                                                <div class="titlepage text_align_center">
                                                    <h2>Followings</h2>
                                                </div>
                                            </div>
                                            <div class="col-md-4">
                                                <div class="team_box text_align_center">
                                                    <div class="team_img">
                                                        <figure><img src="/images/team1.jpg" alt="#" /></figure>
                                                    </div>
                                                    <% for (followings of user.followings) { %>
                                                        <div class="craig">
                                                            <h3>
                                                                <%= followings.username %>
                                                            </h3>
                                                            <ul class="social_icon ">
                                                                <li>
                                                                    <a href="/users/<%= followings._id %>">
                                                                        <i class="fa fa-external-link-square"
                                                                            aria-hidden="true"></i>
                                                                    </a>
                                                                </li>
                                                                <!-- <li><a href="Javascript:void(0)"><i class="fa fa-twitter" aria-hidden="true"></i></a>
                                 </li>
                                 <li><a href="Javascript:void(0)"><i class="fa fa-linkedin" aria-hidden="true"></i></a>
                                 </li> -->
                                                            </ul>
                                                        </div>
                                                        <% } %>
                                                </div>
                                            </div>

                                        </div>
                                    </div>
                                </div>
                                <% } %>
                                    <!-- end followings -->

                                    <!-- adding photo modal -->
                                    <div class="modal fade bd-example-modal-lg" tabindex="-1" role="dialog"
                                        aria-labelledby="myLargeModalLabel" aria-hidden="true">
                                        <div class="modal-dialog modal-lg">
                                            <div class="modal-content">
                                                <div class="modal-header">
                                                    <button type="button" class="close" data-dismiss="modal"
                                                        aria-label="Close">
                                                        <span aria-hidden="true">&times;</span>
                                                    </button>
                                                </div>
                                                <div style="margin-top: 50px; margin-bottom: 50px;" class="container">
                                                    <div class="row">
                                                        <div class="col-md-12 ">
                                                            <div class="text_align_center">
                                                                <h2
                                                                    style="font-size: 30px; margin-bottom: 20px; color: #D43A8E;">
                                                                    Add
                                                                    New Photo
                                                                </h2>
                                                            </div>
                                                        </div>
                                                        <div class="col-md-10 offset-md-1">
                                                            <form action="/photos" method="POST" class="main_form"
                                                                enctype="multipart/form-data">
                                                                <div class="row">
                                                                    <div class="col-md-12">
                                                                        <input class="form_control" placeholder="Name"
                                                                            type="text" name="name">
                                                                    </div>
                                                                    <div class="col-md-12">
                                                                        <textarea name="description"
                                                                            style="height: 150px;" class="form_control"
                                                                            placeholder="Description"
                                                                            rows="5"></textarea>
                                                                    </div>

                                                                    <div style="margin-bottom: 20px ;"
                                                                        class="col-md-12">
                                                                        <input type="file" name="image"
                                                                            class="form-control-file">
                                                                    </div>

                                                                    <div class="col-md-12">
                                                                        <div class="group_form">
                                                                            <button class="read_more">Upload
                                                                                File</button>
                                                                        </div>
                                                                    </div>
                                                                </div>
                                                            </form>
                                                        </div>
                                                    </div>
                                                </div>
                                            </div>
                                        </div>
                                    </div>

                                    <%- include('partials/footer') %>